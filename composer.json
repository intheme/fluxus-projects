{
  "name": "intheme/fluxus-projects",
  "description": "WordPress plugin that powers portfolio projects in Fluxus Wordpress Theme",
  "license": "GPL",
  "authors": [
    {
      "name": "inTheme",
      "email": "contact@inthe.me"
    }
  ],
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "php-coveralls/php-coveralls": "^2.0@dev",
    "squizlabs/php_codesniffer": "3.*",
    "friendsofphp/php-cs-fixer": "^2.9",
    "jakub-onderka/php-parallel-lint": "dev-master",
    "jakub-onderka/php-console-highlighter": "dev-master",
    "wp-coding-standards/wpcs": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
  },
  "scripts": {
    "sniffs": "phpcs --standard=Wordpress src/",
    "fixes": "phpcbf --standard=Wordpress src/",
    "lints": "parallel-lint ./src  --blame --exclude vendor"
  }
}
